        <br>
        <div id="content">
            <form action="/update/<%= index %>" method="post">
                <h1>Update The Post</h1>
                <br>
                <input value="<%= post.profileimage %>" type="url" name="profileimage" placeholder=" profileimage">
                <br><br>
                <input value="<%= post.Name %>" type="text" name="Name" placeholder=" Name">
                <br><br>
                <input value="<%= post.Subtitle %>" type="text" name="Subtitle" placeholder=" Subtitle">
                <br><br>
                <input value="<%= post.Posttext %>" type="text" name="Posttext" placeholder=" Posttext">
                <br><br>
                <input value="<%= post.Postimage %>" type="url" name="Postimage" placeholder=" Postimage">
                <br><br>
                <button>Submit</button>
         
            </form>
        </div>
       
      </div>
    
   
